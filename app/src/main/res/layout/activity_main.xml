<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    tools:context="com.example.android.businesscard.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/androidify" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="David KatiÄ‡" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:text="Programmer" />

    <TextView
        android:id="@+id/addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic|bold"
        android:textColor="#fff700"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Addres: Croatia" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addres"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic|bold"
        android:textColor="#fff700"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Phone: 00385 12 345 6789" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic|bold"
        android:textColor="#fff700"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Email: david.katic@gmail.com" />

    <TextView
        android:id="@+id/git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic|bold"
        android:textColor="#fff700"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="GitHub: https://github.com/dkatic" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/git"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/qrcode" />

</RelativeLayout>
</ScrollView>